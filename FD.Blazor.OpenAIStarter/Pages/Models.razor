@* @page "/models/{ModelName}" *@
@page "/models"
@*birden fazla parametre alinacaksa ve kök url degismeyecekse *@
@inject NavigationManager Navigation


@if (ModelName == "chatgpt")
{
    <button class="btn btn-danger" @onclick="@(()=>Navigation.NavigateTo("/models?modelName=dall-e"))">Switch to Dall-e Model</button>
    <ChatGpt />
}
else
{
    <button class="btn btn-danger" @onclick="@(()=>Navigation.NavigateTo("/models?modelName=chatgpt"))">Switch to ChatGPT Model</button>

    <DallE />
}


@code {
    // [Parameter]
    // public string ModelName { get; set; }

    [SupplyParameterFromQuery(Name = "modelName")]
    [Parameter]
    public string ModelName { get; set; }
}
